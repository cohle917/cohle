#include<stdio.h>
int main(void)
{
	int b=0;
	int a;
	float a1;
	scanf("%d %d",&a,&b);
	if (a%b==0){
		printf("%d + %d = %d\n",a,b,(a+b));
		printf("%d - %d = %d\n",a,b,(a-b));
		printf("%d * %d = %d\n",a,b,(a*b));
		printf("%d / %d = %d\n",a,b,(a/b));
	}else{
		a1=a*1.0;
		printf("%d + %d = %d\n",a,b,(a+b));
		printf("%d - %d = %d\n",a,b,(a-b));
		printf("%d * %d = %d\n",a,b,(a*b));
		printf("%d / %d = %.2f\n",a,b,(a1/b));
	}
	return 0;
}
